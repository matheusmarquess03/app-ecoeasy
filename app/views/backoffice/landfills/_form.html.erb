<%= form_for([:backoffice, @landfill], html: { class: 'form' }) do |f| %>

  <br/>

  <div class="panel panel-default">

    <div class="panel-heading">
      <h1>Aterro</h1>
    </div>
    <br/>

    <div class="panel-body">
      <div class="form-group">
        <div class="col-lg-12">
          <div class="form-group">
            <div class="col-lg-6">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control', required: true  %>
            </div>
            <div class="col-lg-6">
              <%= f.label :phone %>
              <%= f.text_field :phone, class: 'form-control', required: true  %><br />
            </div>
          </div>
        </div>
      </div>

      <%= f.fields_for :address, @landfill.address do |a| %>
        <div class="col-lg-12">
          <div class="form-group">
            <div class="col-lg-6">
              <%= a.label :street, 'Rua/Av.' %>
              <%= a.text_field :street, class: 'form-control', required: true  %>
            </div>
            <div class="col-lg-2">
              <%= a.label :number, 'Número' %>
              <%= a.text_field :number, class: 'form-control', required: true  %>
            </div>
            <div class="col-lg-4">
              <%= a.label :complement, 'Complemento' %>
              <%= a.text_field :complement, class: 'form-control', required: true  %><br />
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-3">
              <%= a.label :district, 'Bairro' %>
              <%= a.text_field :district, class: 'form-control', required: true  %>
            </div>
            <div class="col-lg-3">
              <%= a.label :city, 'Cidade' %>
              <%= a.text_field :city, class: 'form-control', required: true  %>
            </div>
            <div class="col-lg-3">
              <%= a.label :state, 'Estado' %>
              <%= a.text_field :state, class: 'form-control', required: true  %>
            </div>
            <div class="col-lg-3">
              <%= a.label :country, 'País' %>
              <%= a.text_field :country, class: 'form-control', required: true  %><br>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <br />

  </div>

  <%= link_to 'Voltar', backoffice_landfills_path, class: 'btn btn-secondary btn-lg' %>
  <%= button_tag 'Salvar', class: 'btn btn-success btn-lg' %>
<% end %>
