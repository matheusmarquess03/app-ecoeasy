<div class="col-lg-12">
  <h1 class="page-header">MODULO MOTORISTA</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        Agenda do Motorista
        <%= link_to new_backoffice_schedule_path, class: 'btn btn-outline btn-success pull-right', style:"margin-top: -5px" do %>
          <i class="fa fa-plus-square fa-fw"></i> Cadastrar
        <% end %>
      </h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Motorista</th>
              <th>Data</th>
              <th>Estado da agenda</th>
              <th>Quantidade de coletas agendadas</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @schedules.each do |schedule| %>
              <tr>
                <td><%= schedule.user.name %></td>
                <td><%= schedule.work_day.strftime("%d/%m/%Y") %></td>

                <td><%= t("booleans.schedules.full_schedule.#{schedule.full_schedule}") %></td>

                <td><%= schedule.collects.count %> coletas agendadas at√© o momento</td>
                <td>
                  <div class="pull-right">
                    <% if schedule.collects.blank? || schedule.collects&.first&.rubble_collect? %>
                      <%= link_to backoffice_schedule_path(schedule), class: 'btn btn-outline btn-info' do %>
                        <i class="fa fa-search-plus"></i> Detalhes
                      <% end %>
                    <% else %>
                      <%= link_to '', class: 'btn btn-outline btn-info', disabled: true do %>
                        <i class="fa fa-search-plus"></i> Detalhes
                      <% end %>
                    <% end %>
                    <%= link_to edit_backoffice_schedule_path(schedule), class: 'btn btn-outline btn-warning' do %>
                      <i class="fa fa-edit"></i> Editar
                    <% end %>

                    <%= link_to backoffice_schedule_path(schedule), class: 'btn btn-outline btn-danger', method: :delete, data: { confirm: 'Tem certeza que deseja deletar a agenda deste motorista?' } do %>
                        <i class="fa fa-times"></i> Deletar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
