<%= form_for [:backoffice, @schedule] do |f| %>

<% if flash[:alert] %>
  <div class="notice"><%= flash[:alert] %></div>
<% end %>

  <br/>
  <div class="col-lg-12">
    <h1 class="page-header">MODULO CAMINHONEIRO</h1>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Agenda</h3>
      </div>

      <div class="panel-body">
        <div class="table-responsive">
          <h4>Definir agenda para: </h4>
          <%= f.select(
              :user_id,
              options_from_collection_for_select(
                @users,
                :id,
                :name,
                f.object.user_id
              ),
              { include_blank: 'Selecione um caminhoneiro' },
              { class: 'form-control' }
          ) %>
          <br />

          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= f.label :work_day %></th>
                <th><%= f.label :full_schedule %></th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= date_select('schedule', 'work_day', use_month_numbers: true, order: [:day, :month, :year]) %></td>
                <td><%= f.check_box :full_schedule %></td>
              </tr>
            </tbody>
          </table>

          <%= f.submit 'Salvar', class: 'btn btn-default' %>
        </div>
      </div>

    </div>
  </div>
<% end %>
