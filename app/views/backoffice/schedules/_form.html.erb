<%= form_for [:backoffice, @schedule] do |f| %>
  <div class="col-lg-12">
    <h1 class="page-header">MODULO MOTORISTA</h1>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Agenda</h3>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <div class="col-lg-12">
            <h4>Definir agenda para: </h4>
            <%= f.select(
                :user_id,
                options_from_collection_for_select(
                  @users,
                  :id,
                  :name,
                  f.object.user_id
                ),
                { include_blank: 'Selecione um motorista' },
                { class: 'form-control' }
            ) %>
            <br>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-6">
            <%= f.label :work_day %>
            <%= date_select('schedule', 'work_day', use_month_numbers: true, order: [:day, :month, :year], class: 'form-control') %>
          </div>

          <div class="col-lg-6">
            <%= f.check_box :full_schedule %>
            <%= f.label :full_schedule %>
          </div>
        </div>
        </div>
      </div>

      <%= link_to 'Voltar', backoffice_schedules_path, class: 'btn btn-secondary btn-lg' %>
      <%= button_tag 'Salvar', class: 'btn btn-success btn-lg' %>
    </div>
  </div>
<% end %>
