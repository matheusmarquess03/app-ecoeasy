<div class="col-lg-12">
  <h1 class="page-header">MODULO COLETA</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Evidencias</h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Supervisor</th>
              <th>Descrição</th>
              <th>Data</th>
              <th>Endereço</th>
              <th>Imagem</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody id="incident">
            <% @evidences.each do |evidence| %>
              <tr>
                <td><%= evidence.supervisor.name %></td>
                <td><%= evidence.description %></td>
                <td><%= I18n.l evidence.created_at.localtime, :format => :with_day_of_week, :locale => 'pt-BR' %></td>
                <td><%= evidence.full_address %></td>
                <td><%= image_tag evidence.images.first.variant(resize: "100x100") if evidence.images.attached? %></td>
                <td>
                  <div class="pull-right">
                    <%= link_to backoffice_evidences_incident_path(evidence), class: 'btn btn-outline btn-info' do %>
                      <i class="fa fa-search-plus"></i> Detalhes
                    <% end %>
                    <%= link_to edit_backoffice_evidences_incident_path(evidence), class: 'btn btn-outline btn-warning' do %>
                      <i class="fa fa-edit"></i> Editar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
