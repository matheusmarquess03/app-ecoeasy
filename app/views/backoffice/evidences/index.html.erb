<% unless notice.nil? %>
  <div class="alert alert-success">
    <a href="#" class="alert-link"><%= notice %></a>
  </div>
<% end %>
<br/>

<div class="col-lg-12">
  <h1 class="page-header">MODULO COLETA</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Evidencias</h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Supervisor</th>
              <th>Descrição</th>
              <th>Data</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @evidences.each do |evidence| %>
              <tr>
                <td><%= evidence.supervisor.name %></td>
                <td><%= evidence.description %></td>
                <td><%= I18n.l evidence.created_at.localtime, :format => :with_day_of_week, :locale => 'pt-BR' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
