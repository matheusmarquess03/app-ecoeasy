<div class="col-lg-12">
  <h1 class="page-header">MODULO LIMPEZA DE VIAS</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Evidência</h4>
    </div>


    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Supervisor</th>
              <th>Descrição</th>
              <th>Data</th>
              <th>Endereço</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody id="incident">
            <tr>
              <td><%= @evidence.supervisor.name %></td>
              <td><%= @evidence.description %></td>
              <td><%= I18n.l @evidence.created_at.localtime, :format => :with_day_of_week, :locale => 'pt-BR' %></td>
              <td><%= @evidence.full_address %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-12 text-center carousel-container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% if @evidence.images.attached? %>
              <% @evidence.images.each_with_index do |evidence, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>" style="padding: 3rem;">
                  <%= image_tag evidence.variant(resize: "800x600"), class: 'border-whitesmoke'  %>
                </div>
              <% end %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <h1><i class="fa fa-chevron-circle-left fa-fw"></i></h1>
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <h1><i class="fa fa-chevron-circle-right fa-fw"></i></h1>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <%# Comments Feed %>
      <div class="comments-feed">
        <%= render partial: 'backoffice/evidences/shared/comment_fields' %>
      </div>
    </div>
  </div>
</div>
