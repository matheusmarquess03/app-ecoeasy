<div class="col-lg-12">
  <h1 class="page-header">MODULO COLETA</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Evidencias</h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Supervisor</th>
              <th>Descrição</th>
              <th>Data</th>
              <th>Endereço</th>
              <th>Imagem</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody id="simple_evidence">
            <% @evidences.each do |evidence| %>
              <tr data-link="<%= backoffice_evidences_simple_evidence_path(evidence) %>">
                <td><%= evidence.supervisor.name %></td>
                <td><%= evidence.description %></td>
                <td><%= I18n.l evidence.created_at.localtime, :format => :with_day_of_week, :locale => 'pt-BR' %></td>
                <td><%= evidence.full_address %></td>
                <td><%= image_tag evidence.images.first.variant(resize: "100x100") if evidence.images.attached? %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
