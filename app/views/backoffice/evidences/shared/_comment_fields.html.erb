<div class="row">
  <div class="col-lg-12">
    <br>
    <div class="panel panel-default">
      <div class="panel-heading">
        Comentarios
      </div>

      <div class="panel-body">
        <div class="col-lg-12">
          <div class="col-lg-6">
            <div class="panel panel-default">
              <div class="panel-body">
                <strong><%= @evidence.supervisor.name %>:</strong> <%= @evidence.description %>
              </div>
              <div class="panel-footer text-right">
                <b><%= I18n.l @evidence.created_at.localtime, :format => :with_day_of_week, :locale => 'pt-BR' %></b>
              </div>
            </div>
          </div>
        </div>

        <% @evidence.comments.each do |comment| %>
          <div class="col-lg-12">
            <div class="col-lg-6">
              <div class="panel panel-default">
                <div class="panel-body">
                  <strong><%= comment.admin.name %>:</strong> <%= comment.comment %>
                </div>
                <div class="panel-footer" style="display: flex; justify-content: space-between">
                  <div class="text-left">
                    <%= link_to backoffice_evidence_comment_path(@evidence, comment), method: :delete do %>
                      <i class="fa fa-trash-o"></i> Remover coment√°rio
                    <% end %>
                  </div>

                  <div class="text-right">
                    <b><%= I18n.l comment.created_at.localtime, :format => :with_day_of_week, :locale => 'pt-BR' %></b>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%= form_for :comments, url: backoffice_evidence_comments_path(@evidence), method: :post do |f| %>
          <div class="col-lg-12">
            <div class="col-lg-6">
              <div class="col-lg-9">
                <%= f.text_field :comment, class: 'form-control' %>
              </div>
              <div class="col-lg-3">
                <%= f.submit "Comentar", class: "btn btn-primary w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
