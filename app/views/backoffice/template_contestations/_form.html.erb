<%= form_for([:backoffice, @template], html: { class: 'form' }) do |f| %>

  <br/>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Formulário de Contestação</h1>
    </div>
    <br/>

    <div class="panel-body">
      <div class="col-lg-12">
        <div class="form-group">
          <div class="col-lg-6">
            <%= f.file_field :file %>
            <br />
          </div>
        </div>
      </div>
    </div>
    <br />
  </div>
  <%= button_tag 'Salvar', class: 'btn btn-success btn-lg' %>
<% end %>
