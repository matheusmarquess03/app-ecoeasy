<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% if @infringement.images.attached? %>
      <% @infringement.images.each_with_index do |infringement, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>" style="padding: 3rem;">
          <%= image_tag infringement.variant(resize: "800x600"), height: '195', class: 'border-whitesmoke'  %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <h1><i class="fa fa-chevron-circle-left fa-fw"></i></h1>
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <h1><i class="fa fa-chevron-circle-right fa-fw"></i></h1>
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
