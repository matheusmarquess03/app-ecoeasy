<div class="col-lg-12">
  <h1 class="page-header"><i class="fa fa-recycle fa-fw"></i> MODULO COLETA DE LIXO DI√ÅRIA</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <i class="fa fa-map-marker fa-fw"></i> Gerenciar rotas
      </h4>
    </div>

    <div class="panel-body">
      <h4><%= @route.trucker_schedule_label %></h4>
      <br>
      <div class="maps" id="map_to_daily_collect"></div>
    </div>
  </div>
</div>

<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
    var locations = []
    <% @route.address.pluck(:latitude, :longitude).each do |location| %>
      locations.push(<%= raw location %>);
    <% end %>

    document.addEventListener("DOMContentLoaded", function() {
      showDailyCollectInMap(locations);
    });
  </script>
<% end %>
