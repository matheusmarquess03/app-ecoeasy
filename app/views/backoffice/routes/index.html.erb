<div class="col-lg-12">
  <h1 class="page-header"></h1>

  <div class="panel panel-default panel-table-custom">
    <div class="panel-heading">
      <p class="title-page">
         Gerenciar rotas
      </p>

      <h4>
        <%= link_to new_backoffice_route_path, class: 'btn btn-success pull-right', style:"margin-top: -5px" do %>
          <i class="fa fa-plus-circle fa-fw"></i> Cadastrar
        <% end %>
      </h4>
    </div>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Titulo</th>
              <th>Descrição</th>
              <th>Endereços</th>
            </tr>
          </thead>

          <tbody>
            <% @routes.each do |route| %>
              <tr>
                <td><%= route.title %></td>
                <td><%= route.description %></td>
                <td><%= route.address.count %> pontos programados para a coleta de lixo</td>
                <td>
                  <div class="btn-group">
                    <a class="dropdown-toggle dropdown-toggle-custom" data-toggle="dropdown">
                      ...
                    </a>
                    <ul class="dropdown-menu dropdown-black">
                      <div>
                        <%= link_to backoffice_route_path(route) do %>
                          <i class="fa fa-search-plus"></i> Detalhes
                        <% end %>
                      </div>
                      <div>
                        <%= link_to edit_backoffice_route_path(route) do %>
                          <i class="fa fa-edit"></i> Editar
                        <% end %>
                      </div>
                      <div>
                        <%= link_to backoffice_route_path(route), method: :delete, data: { confirm: 'Tem certeza que deseja deletar esta rota?' } do %>
                          <i class="fa fa-trash-o"></i> Deletar
                        <% end %>
                      </div>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
