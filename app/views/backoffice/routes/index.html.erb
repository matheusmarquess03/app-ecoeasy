<div class="col-lg-12">
  <h1 class="page-header"><i class="fa fa-recycle fa-fw"></i> MODULO COLETA DE LIXO DIÁRIA</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <i class="fa fa-map-marker fa-fw"></i> Gerenciar rotas
        <%= link_to new_backoffice_route_path, class: 'btn btn-outline btn-success pull-right', style:"margin-top: -5px" do %>
          <i class="fa fa-plus-square fa-fw"></i> Cadastrar
        <% end %>
      </h4>
    </div>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Titulo</th>
              <th>Descrição</th>
              <th>Endereços</th>
            </tr>
          </thead>

          <tbody>
            <% @routes.each do |route| %>
              <tr>
                <td><%= route.title %></td>
                <td><%= route.description %></td>
                <td><%= route.address.count %> bairros programados para a coleta de lixo</td>
                <td>
                  <div class="pull-right">
                    <%= link_to backoffice_route_path(route), class: 'btn btn-outline btn-info' do %>
                      <i class="fa fa-search-plus"></i> Detalhes
                    <% end %>

                    <%= link_to edit_backoffice_route_path(route), class: 'btn btn-outline btn-warning' do %>
                      <i class="fa fa-edit"></i> Editar
                    <% end %>

                    <%= link_to backoffice_route_path(route), class: 'btn btn-outline btn-danger', method: :delete, data: { confirm: 'Tem certeza que deseja deletar esta rota?' } do %>
                      <i class="fa fa-times"></i> Deletar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
