<div class="col-lg-12">
  <h1 class="page-header">MODULO DE CONTRATOS</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Contratos
        <%= link_to new_backoffice_contract_path, class: 'btn btn-outline btn-success pull-right', style:"margin-top: -5px" do %>
          <i class="fa fa-plus-square fa-fw"></i> Cadastrar
        <% end %>
      </h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
            </tr>
          </thead>

          <tbody>
            <% @contracts.each do |contract| %>
              <tr>
                <td><%= contract.name %></td>
                <td>
                  <div class="pull-right">
                    <%= link_to backoffice_contract_path(contract), class: 'btn btn-outline btn-info' do %>
                      <i class="fa fa-search-plus"></i> Detalhes
                    <% end %>

                    <%= link_to edit_backoffice_contract_path(contract), class: 'btn btn-outline btn-warning' do %>
                      <i class="fa fa-edit"></i> Editar
                    <% end %>

                    <%= link_to backoffice_contract_path(contract), class: 'btn btn-outline btn-danger', method: :delete, data: { confirm: 'Ao confirmar esta operação será perdido definitivamente o contrato. Tem certeza que deseja fazer isto?' } do %>
                        <i class="fa fa-times"></i> Deletar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
