<%= search_form_for @q, url: reports_backoffice_collects_daily_garbage_collects_url do |f| %>
  <div class="row">
    <div class="col-lg-4">
      <strong>Número de protocolo: </strong>
      <%= f.text_field :protocol_number_cont, { class: 'form-control' } %>
    </div>

    <div class="col-lg-4">
      <strong>Situação: </strong>
      <%= f.select :status_eq,
        options_for_select(collects_statuses_i18n, selected: params[:q].present? ? params[:q][:status_eq] : nil),
        { include_blank: 'Todas coletas' }, { class: 'form-control' }
      %>
    </div>

    <div class="col-lg-4">
      <strong>Data: </strong>
      <%= date_field_tag 'q[collect_date_gteq]', nil, { class: 'form-control' } %>
    </div>

    <div class="col-lg-4">
      <br><strong>Rota: </strong>
      <%= f.text_field :schedule_routes_title_cont, { class: 'form-control' } %>
    </div>

    <div class="col-lg-8">
      <br><strong>Endereço de despejo: </strong>
      <%= f.text_field :landfill_address_street_or_address_number_or_address_district_or_address_city_or_address_state_or_address_country_cont, { class: 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-lg-3">
      <br>
      <%= f.submit 'Aplicar Filtro', class: 'btn btn-info' %>
    </div>
  </div>
<% end %>
