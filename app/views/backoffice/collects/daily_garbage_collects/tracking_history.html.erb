<div class="col-lg-12">
  <h1 class="page-header"><i class="fa fa-globe fa-fw"></i>HISTÓRICO </h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><i class="fa fa-map-marker fa-fw"></i> Histórico de Coletas</h4>
    </div>


    <div class="panel-body">
      <div class="row">
        <div class="col-lg-8">
          <h5>Selecione um motorista: </h5>
          <%= select_tag 'trucker',
              options_from_collection_for_select(@tracking_truckers, 'id', 'name'),
              include_blank: 'Selecione uma opção', class: "form-control"
          %>
        </div>
		
		<div id="agenda_motorista" class="col-lg-8">
          <h5>Seleciona a agenda do camminhoneiro: </h5>
          <%= select_tag 'schedules',
              options_from_collection_for_select(@schedules_trackable, 'firebase_reference_access', 'trucker_schedule_label'),
              include_blank: 'Selecione uma opção', class: "form-control", onchange: "truckerTracking(this.value);"
          %>
        </div>
		
      </div>
      <br>
      <div class="maps" id="truckerTracking"></div>
    </div>
  </div>
</div>
