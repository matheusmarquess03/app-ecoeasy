<%= search_form_for @q, url: reports_backoffice_collects_rubble_collects_url do |f| %>
  <div class="row">
    <div class="col-lg-4">
      <strong>Número de protocolo: </strong>
      <%= f.text_field :protocol_number_cont, { class: 'form-control' } %>
    </div>

    <div class="col-lg-3">
      <strong>Situação: </strong>
      <%= f.select :status_eq,
        options_for_select(collects_statuses_i18n, selected: params[:q].present? ? params[:q][:status_eq] : nil),
        { include_blank: 'Todas coletas' }, { class: 'form-control' }
      %>
    </div>

    <div class="col-lg-5">
      <strong>Intervalo de datas: </strong>
      <div class="row">
        <div class="col-lg-6">
          <%= date_field_tag 'q[created_at_gteq]', params.dig(:q, :created_at_gteq), { class: 'form-control' } %>
        </div>
        <div class="col-lg-6">
          <%= date_field_tag 'q[created_at_lteq]',  params.dig(:q, :created_at_lteq), { class: 'form-control' } %>
        </div>
      </div>
    </div>

    <div class="col-lg-8">
      <br><strong>Endereço: </strong>
      <%= f.text_field :address_street_or_address_number_or_address_district_or_address_city_or_address_state_or_address_country_cont, { class: 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-lg-3">
      <br>
      <%= f.submit 'Aplicar Filtro', class: 'btn btn-info' %>
    </div>
  </div>
<% end %>
