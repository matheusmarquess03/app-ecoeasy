<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Solicitante</th>
          <th>Data da solicitação</th>
          <th>Data proposta</th>
          <th>Status</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @collects.proposed_date.each do |collect| %>
          <tr>
            <td><%= collect.client.name %></td>
            <td><%= I18n.l collect.created_at.localtime, :format => :with_day_of_week, :locale => 'pt-BR' %></td>
            <td><%= I18n.l collect.collect_date.localtime, :format => :with_day_of_week, :locale => 'pt-BR' if collect.collect_date.present? %></td>
            <td><%= t("enums.collects.status.#{collect.status}") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
