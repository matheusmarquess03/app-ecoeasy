<div class="col-lg-12">
  <h1 class="page-header"></h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Coleta de entulho</h4>
    </div>

    <div class="panel-body">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#collect_requested" data-toggle="tab" aria-expanded="true">Pendentes de agendamento</a>
        </li>
        <li class=""><a href="#collects_with_proposed_date" data-toggle="tab" aria-expanded="false">Pendentes de confirmação</a>
        </li>
        <li><a href="#collects_confirmed" data-toggle="tab">Pendentes de recolhimento</a>
        </li>
        <li><a href="#collects_reaped" data-toggle="tab">Coletas realizada</a>
        </li>
        <li><a href="#collects_dumped" data-toggle="tab">Coletas descartadas</a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane fade active in" id="collect_requested">
          <%= render partial: 'backoffice/collects/rubble_collects/partials/requested' %>
        </div>
        <div class="tab-pane fade" id="collects_with_proposed_date">
          <%= render partial: 'backoffice/collects/rubble_collects/partials/proposed_date' %>
        </div>
        <div class="tab-pane fade" id="collects_confirmed">
          <%= render partial: 'backoffice/collects/rubble_collects/partials/confirmed' %>
        </div>
        <div class="tab-pane fade" id="collects_reaped">
          <%= render partial: 'backoffice/collects/rubble_collects/partials/collected' %>
        </div>
        <div class="tab-pane fade" id="collects_dumped">
          <%= render partial: 'backoffice/collects/rubble_collects/partials/dumped' %>
        </div>
      </div>
    </div>
  </div>
</div>
