<%= form_tag backoffice_dashboard_trucker_analysis_path, method: "get" do %>
	<div class="row">
		<div class="col-lg-4">
		  <strong>Selecione um motorista: </strong>
		  <%= select_tag 'q[user_id]',
				  options_from_collection_for_select(@truckers, 'id', 'name', selected: params[:q].present? ? params[:q][:user_id] : nil),
				  include_blank: 'Selecione uma opção', class: "form-control", required: true
		  %>
		</div>
		<div class="col-lg-5">
			<strong>Intervalo de datas: </strong>
			<div class="row">
				<div class="col-lg-6">
					<%= date_field_tag 'q[date_start]', params.dig(:q, :date_start), { class: 'form-control', required: true } %>
				</div>
				<div class="col-lg-6">
					<%= date_field_tag 'q[date_end]',  params.dig(:q, :date_end), { class: 'form-control', required: true } %>
				</div>
			</div>
		</div>
		
		<div class="col-sm-12 col-lg-3">
			<br>
			<%= submit_tag 'Aplicar Filtro', class: 'btn btn-info' %>
		</div>
	</div>
<% end %>
