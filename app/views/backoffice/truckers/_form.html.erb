<br/>

<div class="col-lg-12">
  <div class="panel panel-default">

    <div class="panel-heading">
      <h1>Motoristas</h1>
    </div>
    <br/>

    <div class="panel-body">
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-lg-6">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %><br>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :password %>
          <%= f.text_field :password, class: 'form-control', placeholder: password_placeholder(@trucker) %>
        </div>
        <div class="col-lg-6">
          <%= f.label :password_confirmation %>
          <%= f.text_field :password_confirmation, class: 'form-control', placeholder: password_placeholder(@trucker) %>
        </div>
      </div>
    </div>
  </div>
  <br />

  <%= button_tag 'Salvar', class: 'btn btn-success btn-lg' %>
</div>
