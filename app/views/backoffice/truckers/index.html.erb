<div class="col-lg-12">
  <h1 class="page-header"></h1>
<div class="panel panel-default panel-table-custom">
    <div class="panel-heading">
      <p class="title-page">Motoristas</p>
      <h4>
        <%= link_to new_backoffice_trucker_path, class: 'btn btn-success pull-right', style:"margin-top: -5px" do %>
          <i class="fa fa-plus-circle fa-fw"></i> Cadastrar
        <% end %>
      </h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>E-mail</th>
              <th>Telefone</th>
              <th>CPF</th>
              <th>Carteira de Habilitação</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @truckers.each do |trucker| %>
              <tr>
                <td><%= trucker.name %></td>
                <td><%= trucker.email %></td>
                <td><%= trucker.phone_number %></td>
                <td><%= trucker.cpf %></td>
                <td><%= trucker.cnh %></td>
                <td>
                  <div class="btn-group">
                    <a class="dropdown-toggle dropdown-toggle-custom" data-toggle="dropdown">
                      ...
                    </a>
                    <ul class="dropdown-menu dropdown-black">
                      <div>
                        <%= link_to edit_backoffice_trucker_path(trucker) do %>
                          <i class="fa fa-edit"></i> Editar
                        <% end %>
                      </div>
                      <div>
                        <%= link_to backoffice_trucker_path(trucker), method: :delete, data: { confirm: 'Ao confirmar esta operação será perdido definitivamente a agenda e os dados deste motorista. Tem certeza que deseja fazer isto?' } do %>
                          <i class="fa fa-trash-o"></i> Deletar
                        <% end %>
                      </div>
                    </ul>
                  </div>                
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

  