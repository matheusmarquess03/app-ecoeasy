<% unless notice.nil? %>
  <div class="alert alert-success">
    <a href="#" class="alert-link"><%= notice %></a>
  </div>
<% end %>
<br/>
<h3 class="page-header"></h3>
<div class="col-lg-12">
  <div class="panel panel-default panel-table-custom">
    <div class="panel-heading">
      <p class="title-page">Caminh√µes</p>
      <h4>
        <%= link_to new_backoffice_truck_path, class: 'btn btn-success pull-right', style:"margin-top: -5px" do %>
          <i class="fa fa-plus-circle fa-fw"></i> Cadastrar
        <% end %>
      </h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Marca</th>
              <th>Modelo</th>
              <th>Ano</th>
              <th>Tipo</th>
              <th>Cor</th>
              <th>Placa</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @trucks.each do |truck| %>
              <tr>
                <td><%= truck.brand %></td>
                <td><%= truck.model %></td>
                <td><%= truck.manufacture_year %></td>
                <td><%= t("enums.trucks.truck_type.#{truck.truck_type}") if truck.truck_type.present? %></td>
                <td><%= truck.color %></td>
                <td><%= truck.plate_number %></td>
                <td>
                  <div class="btn-group">
                    <a class="dropdown-toggle dropdown-toggle-custom" data-toggle="dropdown">
                      ...
                    </a>
                    <ul class="dropdown-menu dropdown-black">
                      <div>
                        <%= link_to edit_backoffice_truck_path(truck) do %>
                          <i class="fa fa-edit"></i> Editar
                        <% end %>
                      </div>
                      <div>
                        <%= link_to backoffice_truck_path(truck), method: :delete, data: { confirm: 'Tem certeza que deseja fazer isto?' } do %>
                          <i class="fa fa-trash-o"></i> Deletar
                        <% end %>
                      </div>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
