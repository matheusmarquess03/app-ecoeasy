<br/>

<div class="col-lg-12">
  <div class="panel panel-default">

    <div class="panel-heading">
      <h1>Supervisores</h1>
    </div>
    <br/>

    <div class="panel-body">
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>
        <div class="col-lg-6">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control', required: true %><br>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: 'form-control', required: true  %>
        </div>
        <div class="col-lg-3">
          <%= f.label :cpf %>
          <%= f.text_field :cpf, class: 'form-control cpf-field', required: true  %>
          <br />
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :password %>
          <%= f.text_field :password, class: 'form-control', placeholder: password_placeholder(@supervisor) %>
        </div>
        <div class="col-lg-6">
          <%= f.label :password_confirmation %>
          <%= f.text_field :password_confirmation, class: 'form-control', placeholder: password_placeholder(@supervisor) %>
        </div>
      </div>
    </div>
  </div>
  <br />

  <%= link_to 'Voltar', backoffice_supervisors_path, class: 'btn btn-secondary btn-lg' %>
  <%= button_tag 'Salvar', class: 'btn btn-success btn-lg' %>
</div>
