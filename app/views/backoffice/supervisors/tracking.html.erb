<div class="col-lg-12">
  <h1 class="title-page">
  </h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><i class="fa fa-map-marker fa-fw"></i> Rastrear supervisores</h4>
    </div>


    <div class="panel-body">
      <div class="row">
        <div class="col-lg-8">
          <h5>Selecione o supervisor: </h5>
          <%= select_tag 'supervisors',
              options_from_collection_for_select(@supervisors, 'firebase_reference_access', 'name'),
              include_blank: 'Selecione uma opção', class: "form-control", onchange: "supervisorTracking(this.value);"
          %>
        </div>
      </div>
      <br>
      <div id="phone-info" class="row">
        <div class="col-lg-8">
          <p id="battery-level-container" class="hidden">
            Nível de bateria:
            <span id="battery-level"></span>
          </p>
          <p id="last-access-container" class="hidden">
            Ultimo acesso:
            <span id="last-access"></span>
          </p>
        </div>
      </div>
      <div class="maps" id="supervisorTracking"></div>
    </div>
  </div>
</div>
