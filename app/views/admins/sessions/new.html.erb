<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Acesso ao Backoffice</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail', autofocus: true, autocomplete: "email" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Senha', autocomplete: "off" %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %> Lembrar senha
                  </label>
                </div>
              <% end -%>
              <%= f.submit "Log in", class: 'btn btn-lg btn-success btn-block' %>
            </fieldset>
          <% end %><br/>
          <%= render "admins/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
